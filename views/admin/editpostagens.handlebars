    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Editar postagens: </h3>
<div class="card">
<div class="card-body">
<form action="/admin/postagens/edit" method="post">
    <input type="hidden" name="id" value="{{postagens._id}}"> 
    <label for="titulo">Titulo: </label>
    <input type="text" name="titulo" id="titulo" placeholder="Titulo da postagem" class="form-control" value="{{postagens.titulo}}">
    <label for="descricao">Descrição: </label>
    <input type="text" name="descricao" id="descricao" placeholder="Descrição da postagem" class="form-control" value="{{postagens.descricao}}">
    <label for="conteudo">Conteúdo: </label>
    <input type="text" name="conteudo" id="conteudo" placeholder="Conteúdo da postagem" class="form-control" value="{{postagens.conteudo}}">
    <label for="slug">Slug: </label>
    <input type="text" name="slug" id="slug" class="form-control" value="{{postagens.slug}}">
    <br>
    <button type="submit" class="btn btn-primary">Editar postagem</button>
</form>
</div>
</div>